<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:stretchColumns="1">
            <TableRow
                android:id="@+id/itemGundam"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="책"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemGunnerZaku"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/crown"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="왕관"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemMobileCgue"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grapes"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="포도"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemZuda"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rocket"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="로켓"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemRickdom"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icecream"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="아이스크림"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemPalette"
                android:background="#aaa"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/palette"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="팔레트"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="맨 위로 이동"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>